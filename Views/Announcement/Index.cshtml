        font-size: medium;/*16px*/
        border: 1px solid #ddd;
        display: flex;
        flex-direction: column;
        border: 1px solid #000;
        border-radius: 20px;
    }

    .displayTableBody {
        height: -moz-available;
        height: -webkit-fill-available;
        height: -fill-available;
        width: -moz-available;
        width: -webkit-fill-available;
        width: -fill-available;
        overflow-y: scroll;
        overflow-x: auto;
    }



    th, td {
        display: flex;
        text-align: left;
        padding-left: 15px;
        padding-right: 15px;
        padding-top: 10px;
        padding-bottom: 10px;
        justify-content: space-between;
    }

    tr {
        display: flex;
        width: -moz-available;
        width: -webkit-fill-available;
        width: -fill-available;
        justify-content: space-between;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        border-bottom-right-radius: 0px;
        border-bottom-left-radius: 0px;
    }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }


    .displayEmail {
        width: 230px;
    }

    .displayName {
        width: 160px;
    }

    .displayPhone {
        width: 135px;
    }

    .displayStaffType {
        width: 140px;
    }

    .displaySubject {
        width: 90px;
    }

    .displayGrade {
        width: 90px;
        display: flex;
        justify-content: center;
    }
    /*For the table on My Announcements*/
</style>


